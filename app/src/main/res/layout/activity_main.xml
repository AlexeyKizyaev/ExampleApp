<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_getProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Получить из БД"/>

    <Button
        android:id="@+id/button_getFeaturesStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Получить статус по функциям терминала"/>

    <Button
        android:id="@+id/button_getReceipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Открыть чек"/>

    <Button
        android:id="@+id/button_getProductTaxNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Получить данные по налогу"/>

    <Button
        android:id="@+id/button_getSellReceipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Получить данные по открытому чек"/>

</LinearLayout>